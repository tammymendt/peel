    * Experiments
    *************************************************************************-->

    <!-- HAC output -->
    <bean id="experiment.stratosphere.hac.output" parent="experiment.output.hdfs-1">
        <constructor-arg name="path" value="${system.hadoop-1.path.output}/hac"/>
    </bean>

    <!-- Experiment beans -->
    <bean id="experiment.stratosphere.hac" class="eu.stratosphere.peel.extensions.stratosphere.beans.experiment.StratosphereExperiment" abstract="true">
        <constructor-arg name="runner" ref="stratosphere-0.6-SNAPSHOT"/>
        <constructor-arg name="runs" value="7"/>
        <constructor-arg name="output">
            <ref bean="experiment.stratosphere.hac.output"/>
        </constructor-arg>
    </bean>

    <!-- HAC experiment (enron dataset) -->
    <bean id="experiment.stratosphere.hac.enron" parent="experiment.stratosphere.hac" abstract="true">
        <constructor-arg name="command">
            <value>${app.path.jobs}/impro3-ss14-stratosphere-1.0-SNAPSHOT-hac.jar ${system.hadoop-1.path.input}/docword.enron.txt COMPLETE ${system.hadoop-1.path.output}/hac</value>
        </constructor-arg>
        <constructor-arg name="input">
            <ref bean="docword.enron"/>
        </constructor-arg>
    </bean>

