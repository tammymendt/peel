                    <constructor-arg name="name" value="hac.enron.single-run"/>
                    <constructor-arg name="runs" value="1"/>
                    <constructor-arg name="config">
                        <value>
                            experiment.timeout = 60
                        </value>
                    </constructor-arg>
                </bean>
